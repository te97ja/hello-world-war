pipeline {
  agent any
    stages {
      stage ('git pull') {
          steps {
          echo "starting ..."
          sh 'cd /home/ubuntu/multi'
          s 'git clone https://github.com/te97ja/hello-world-war.git'
          }
          }
      }
      
      stage('docker build') {
            steps {
                sh 'cd /home/ubuntu/multi/hello-world-war'
                sh 'docker build -t dockermultistage .'
            }
        }
      stage('publish') {
            steps {
                sh 'docker tag dockermultistage:latest te97ja/dockermulti:latest'
                sh 'docker push te97ja/dockermulti:latest'
            }
        }
      stage('deploy') {
            steps {
                sh 'docker pull te97ja/dockermulti:latest'
                sh 'docker run -d te97ja/dockermulti:latest'
                
            }
        }
    }
}
